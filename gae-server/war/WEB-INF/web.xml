<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE
		web-app
		PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
		"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  	<servlet>
  		<servlet-name>tagsAtPoint</servlet-name>
  		<servlet-class>horizon.geotagger.server.TagsAtPointServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>tagsInBox</servlet-name>
  		<servlet-class>horizon.geotagger.server.TagsInBoxServlet</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>addTag</servlet-name>
  		<servlet-class>horizon.geotagger.server.AddTagServlet</servlet-class>
  	</servlet>
  
  	<servlet-mapping>
  		<servlet-name>tagsAtPoint</servlet-name>
  		<url-pattern>/tagsAtPoint</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>tagsInBox</servlet-name>
  		<url-pattern>/tagsInBox</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>addTag</servlet-name>
  		<url-pattern>/addTag</url-pattern>
  	</servlet-mapping>
  
  	<welcome-file-list>
  		<welcome-file>index.html</welcome-file>
  	</welcome-file-list>

</web-app>
